<div class="container-fluid d-none d-sm-block">

    <div class="row">
        <div class="col-12 image3">
            <div class="row">

                <div class="col-4"></div>
                <div class="col-4 transparent">
                    <h1>Login</h1>
                    <form method="POST">
                        <div class="form-group">
                            <label for="uname">Usuario</label>
                            <input type="text" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Usuario o email"
                                name="uname" required>
                        </div>

                        <div class="form-group">
                            <label for="psw">Password</label>
                            <input type="password" class="form-control" id="exampleInputPassword1" placeholder="Password" name="psw" required>
                        </div>

                        <p></p>
                        <button type="submit" class="btn btn-warning">ENTRAR</button>
                        <div class="form-group">
                            <p></p>
                            <span class="psw">Olvidaste la
                                <a href="#">contrasenya?</a>
                            </span>
                        </div>

                    </form>
                </div>
                {{#if info}}
                <div class="col-12 error">
                    <h1>ERROR {{info}} </h1>
                </div>
                {{/if}}

            </div>
        </div>
    </div>

</div>

