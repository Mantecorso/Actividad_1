<div class="container-fluid d-none d-sm-block">

    <div class="row">
        <div class="col-12 image3">
            <div class="row">

                <div class="col-4"></div>
                <div class="col-4 transparent">
                    <h1>Login</h1>
                    <form method="POST">
                        <div class="form-group">
                            <label for="uname">Usuario</label>
                            <input type="text" class="form-control" id="exampleInputEmail4" aria-describedby="emailHelp" placeholder="Usuario o email"
                                name="uname" required>
                        </div>

                        <div class="form-group">
                            <label for="psw">Password</label>
                            <input type="password" class="form-control" id="exampleInputPassword3" placeholder="Password" name="psw" required>
                        </div>

                        <p></p>
                        <button type="submit" class="btn btn-warning">ENTRAR</button>
                        <div class="form-group">
                            <p></p>
                            <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#recuperarcontrasenya">
                                Olvidaste la contrasenya?
                            </button>

                        </div>

                    </form>
                </div>
                {{#if info}}
                <div class="col-12 error">
                    <h1>ERROR {{info}} </h1>
                </div>
                {{/if}}
                <div class="container-fluid">
                    <div class="row">
                        <div class="col-3"></div>
                        <div class="col-6">
                            <div class="modal fade" id="recuperarcontrasenya" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                                <div class="modal-dialog" role="document">
                                    <div class="modal-content">
                                        <form action="/login/email" method="post">
                                            <div class="modal-header">
                                                <h5 class="modal-title" id="exampleModalLabel">
                                                    <i class="fas fa-unlock-alt"></i>Olvidaste la contrasenya?</h5>
                                                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                                    <span aria-hidden="true">&times;</span>
                                                </button>
                                            </div>
                                            <div class="modal-body">
                                                <p>enviar un acceso ahora.</p>
                                                <label for="recuperarcontrasenya">Introduce tu correo</label>
                                                <input type="email" class="form-control" name="email" placeholder="Correo electronico" required>
                                            </div>
                                            <div class="modal-footer">
                                                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cerrar</button>
                                                <button type="button" class="btn btn-primary">Enviar</button>
                                            </div>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>

